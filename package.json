  "description": "**Foe Foundry** is a project to procedurally generate interesting and powerful 5e-compatible Monsters.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "preinstall": "echo 'Configuring environment to skip browser downloads for testing...' && export PUPPETEER_SKIP_DOWNLOAD=true",
    "test": "PUPPETEER_SKIP_DOWNLOAD=true vitest run",
    "test:watch": "PUPPETEER_SKIP_DOWNLOAD=true vitest",
    "test:ui": "PUPPETEER_SKIP_DOWNLOAD=true vitest --ui",
    "test:coverage": "PUPPETEER_SKIP_DOWNLOAD=true vitest run --coverage",
    "record_monster": "ts-node scripts/record-monster/playwright-demo.ts",
    "install:test": "PUPPETEER_SKIP_DOWNLOAD=true npm install",
    "install:dev": "npm install"
  },
